<div class="wallet_connect">
    <div class="wallet_address">
        <span>Connect your wallet:</span>
        <div class="bodycontent">
            <div class="input_group">
                <label for="wallet_box">Wallet Address:</label>
                <input type="text" id="wallet_input" name="wallet_box" placeholder="Enter your wallet address" required>
            </div>
            <div class="input_group">
                <label for="private_key">Private Key:</label>
                <input type="password" id="private_key_input" name="private_key" placeholder="Enter your private key" required>
            </div>
            <div class="buttonfield">
                <button id="confirmButton">Connect Wallet</button>
                <button id="close">Close</button>
            </div>
           
        </div>
    </div>
</div>

<div class="create_wallet">
    <div class="wallet_address">
        <span>Generate your wallet:</span>
        <div class="bodycontent">
            <div class="input_group">
                <label for="generated_wallet_address">Wallet Address:</label>
                <input type="text" id="generated_wallet_address" name="generated_wallet_address" placeholder="Generated wallet address" readonly>
            </div>
            <div class="input_group">
                <label for="generated_private_key">Private Key:</label>
                <input type="text" id="generated_private_key" name="generated_private_key" placeholder="Generated private key" readonly>
            </div>
            <div class="buttonfield">
                <button id="generateWalletButton">Generate Wallet</button>
                <button id="close_create_wallet">Close</button>
            </div>
        </div>
    </div>
</div>


